@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext) d-flex justify-content-start align-items-center" id="profile" asp-page="./Index">
            <i class="bi bi-person-circle mr-10"></i> 
            <p class="mb-0" style="margin-left: 15px">Profile</p>
        </a>
    </li>
    @* <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li> *@
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext) d-flex justify-content-start align-items-center" id="change-password" asp-page="./ChangePassword">
            <i class="bi bi-key-fill"></i> 
            <p class="mb-0" style="margin-left: 15px">Password</p>
        </a>
    </li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext) d-flex justify-content-start align-items-center" asp-page="./ExternalLogins">
                <i class="bi bi-plus-circle-fill"></i>
                <p class="mb-0" style="margin-left: 15px">External logins</p>
            </a>
        </li>
    }
    @* <li class="nav-item"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li> *@
</ul>
