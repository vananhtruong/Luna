@model Luna.Models.Feedback

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
    <h4>Feedback</h4>
    <hr />
    <div class="card">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <input asp-for="Message" readonly class="form-control" value="@Model.Message" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrderId" class="control-label"></label>
                    <input asp-for="OrderId" readonly class="form-control" value="@Model.OrderId" />
                </div>

                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" readonly class="form-control" value="@Model.Id" />
                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="Show" id="Show" />
                    <label class="form-check-label" for="Show">
                        @Html.DisplayNameFor(model => model.Show)
                    </label>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>




