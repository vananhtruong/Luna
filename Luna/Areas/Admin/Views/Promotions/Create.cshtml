@model Luna.Models.Promotion

@{
    ViewData["Title"] = "Create";
}

<h1>Create Promotion</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromotionImg" class="control-label"></label>
                <input asp-for="PromotionImg" class="form-control" />
                <span asp-validation-for="PromotionImg" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center ">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-secondary mt-2" />
                    <a asp-action="Index" class="btn btn-secondary mt-2 ms-lg-2">Back </a>

                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
