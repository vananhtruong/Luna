@model IEnumerable<Luna.Models.Promotion>

@{
    ViewData["Title"] = "Promotion";
}


<div class="card-body">
    <p>
        <a asp-action="Create" class="btn btn-success">Create New Promotion</a>
    </p>
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Promotion Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Discount</th>
                <th>IsActive</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td class="h-25 w-25">
                        <img src="@item.PromotionImg" class="img-thumbnail w-25 h-25" />
                    </td>
                    <td>@item.Description</td>
                    <td>@item.Discount</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.PromotionId">
                            <i class="fas fa-folder">
                            </i>
                            View
                        </a>
                        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.PromotionId">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.PromotionId">
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


