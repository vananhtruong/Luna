@model Luna.Models.RoomType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Confirm Delete</h2>

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this roomtype?
</div>

<div class="card" style="padding: 1rem;">
      <form asp-action="Delete">
        <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.TypeName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypePrice)
                    </th>
                    <td>
                        @($"{Model.TypePrice:N0} ₫")
                    </td>
                </tr>
                <tr>
                <th style="white-space: normal; word-wrap: break-word; width: 200px;">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeImg)
                    </th>
                    <td>
                        <img src="@Model.TypeImg" alt="Image" style="width:100px;height:auto;" />
                    </td>
                </tr>
            </table>
            <div class="mt-3">
                <input type="hidden" asp-for="TypeId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
</div>
