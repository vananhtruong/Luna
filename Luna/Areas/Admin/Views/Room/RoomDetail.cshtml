@section Styles {
    <style type="text/css">

    .carousel-control-prev-icon, .carousel-control-next-icon {
    background-color: rgba(0, 0, 0, 0.5); /* Make sure the buttons are visible */
    border-radius: 50%; /* Optional: make the icons round */
    }

    .carousel-control-prev, .carousel-control-next {
    width: 5%; /* Adjust the size of the button area */
}

        .owl-carousel .owl-dot,
        .owl-carousel .owl-nav .owl-next,
        .owl-carousel .owl-nav .owl-prev {
            background-color: rgba(0, 0, 0, 0.5); /* Đặt màu nền */
            border-radius: 50%; /* Làm tròn các nút */
            color: #fff; /* Màu chữ trắng */
            width: 40px; /* Chiều rộng nút */
            height: 40px; /* Chiều cao nút */
            line-height: 40px; /* Căn giữa văn bản theo chiều dọc */
            text-align: center; /* Căn giữa văn bản theo chiều ngang */
            font-size: 20px; /* Kích thước font */
            margin: 5px; /* Khoảng cách giữa các nút */
            cursor: pointer; /* Con trỏ chỉ tay */
            transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu nền */
        }

            .owl-carousel .owl-nav .owl-next:hover,
            .owl-carousel .owl-nav .owl-prev:hover,
            .owl-carousel .owl-dot:hover {
                background-color: rgba(0, 0, 0, 0.8); /* Màu nền khi hover */
            }

        /* Định vị các nút điều hướng */
        .owl-carousel .owl-nav .owl-prev {
            position: absolute;
            top: 50%;
            left: -25px; /* Điều chỉnh vị trí nút prev */
            transform: translateY(-50%);
        }

        .owl-carousel .owl-nav .owl-next {
            position: absolute;
            top: 50%;
            right: -25px; /* Điều chỉnh vị trí nút next */
            transform: translateY(-50%);
        }
    </style>
}
