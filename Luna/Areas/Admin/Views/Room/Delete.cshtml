@model Luna.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Confirm Delete</h2>

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this room?
</div>

<div class="card" style="padding: 1rem;">
    <form asp-action="Delete">
            <table style="width: 100%;border-collapse: separate;border-spacing: 0 10px;margin: 20px 0;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomStatus)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.RoomStatus)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IsActive)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Type.TypeId)
                    </td>
                </tr>
            </table>
            <div class="mt-3">
                <input type="hidden" asp-for="RoomId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
</div>
