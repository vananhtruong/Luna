@model IEnumerable<Luna.Models.Service>

@{
    ViewData["Title"] = "Service";
}

<div class="card">
    <div class="card-header">

        <div class="row">
            <div class="col-sm-12 col-md-6">
                <a class="nav-link" asp-action="Create">
                    <h3 class="card-title btn btn-success">Add New</h3>
                </a>
            </div>
            <div class="col-sm-12 col-md-6">
                <form asp-action="Search" method="get">
                    <div class="input-group">
                        <input type="search" name="query" class="form-control form-control-lg" placeholder="Type your keywords here">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-lg btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Service Name</th>
                    <th>Service Price</th>
                    @* <th>IsActive</th> *@
                    <th>Service Image</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceName</td>
                        <td>@item.ServicePrice</td>
                        @* <td>@item.IsActive</td> *@
                        <td class="h-25 w-25">
                            <img src="@item.ServiceImg" class="img-thumbnail w-25 h-25" />
                        </td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.ServiceId">
                                <i class="fas fa-folder">
                                </i>
                                View
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.ServiceId">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ServiceId">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
       
    </div>

