@model Luna.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Service</h1>
<hr />
<div class="row justify-content-center ">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ServiceId" />
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicePrice" class="control-label"></label>
                <input asp-for="ServicePrice" class="form-control" />
                <span asp-validation-for="ServicePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <div class="custom-select-wrapper">
                    <select asp-for="IsActive" class="form-control custom-select-arrow">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceImg" class="control-label"></label>
                <input asp-for="ServiceImg" class="form-control" />
                <span asp-validation-for="ServiceImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center mt-2">
                <div class="form-group mt-2">
                    <input type="submit" value="Save" class="btn btn-secondary" />
                    <a asp-action="Index" class="btn btn-secondary ">Back</a>

                </div>
        </form>
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
