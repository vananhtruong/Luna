@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kế thừa từ layout chính
}

<section class="section">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">

                <div class="card" id="chat3" style="border-radius: 15px;">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-6 col-lg-5 col-xl-4 mb-4 mb-md-0">
                                <div class="p-3">

                                    <div data-mdb-perfect-scrollbar-init style="position: relative; height: 400px; overflow-y:auto">
                                        <partial name="_Sender" />
                                    </div>

                                </div>

                            </div>

                            <div class="col-md-6 col-lg-7 col-xl-8">
                                @RenderBody()
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

@section Styles
{
    <style type="text/css">
        .custom-container {
            max-width: 100vw;
            padding: 0;
            
        }

        .mb-3 {
            margin-bottom: 0 !important;
        }

        #message {
            background-color: #f0f2f5;
            border: none;
            border-radius: 40px;
            margin-left: 20px;
            font-size: 16px;
        }

        button#sendButton {
            background-color: transparent;
            border: none;
            color: #ffc107;
            font-size: 22px;
            margin-left: 30px;
        }
        #message {
            border-color: transparent
        }

        #chat3 .form-control:focus {
            box-shadow: inset 0px 0px 0px 1px transparent;
        }

        .badge-dot {
            border-radius: 50%;
            height: 10px;
            width: 10px;
            margin-left: 2.9rem;
            margin-top: -.75rem;
        }

        a.d-flex.justify-content-between {
            text-decoration: none;
        }

        .input-group-text {
            background-color: transparent !important;
        }
    </style>
}
@section Scripts {
    @RenderSection("Scripts", required: false)
}
